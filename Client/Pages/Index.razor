<SurveyPrompt Title="How is Blazor working for you?" />

<p>
    Version: @_version
</p>

@code {
    private string _version;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _version = await Api.GetConfig("Version");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.ToString());
        }
    }

}
